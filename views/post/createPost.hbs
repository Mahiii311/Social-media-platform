<div class="col-12 mt-5">
    <form class="card" id="addPostForm" enctype="multipart/form-data">
        <div class="card-header">
            <h3 class="card-title fw-bold fs-4">Add post</h3>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label fs-5">Title</label>
                <input class="form-control" id="title" name="title" placeholder="title">
            </div>
            <div class="mb-3">
                <label for="userPost" class="form-label fs-5">Post Image:</label>
                <input type="file" class="form-control" id="postImg" name="postImg" >
            </div>
            <div class="mb-3">
                <label class="form-label fs-5">Description</label>
                <textarea class="form-control" id="description" name="description" rows="5"></textarea>
            </div>
        </div>
        <div class="card-footer text-end">
          <button type="submit" id="upload-btn" class="btn btn-primary me-5">Upload</button>
        </div>
    </form>
</div>
